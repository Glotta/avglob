@import "colors.styl"

*
	border 0
	padding 0
	margin 0
	box-sizing border-box
	outline none

img
	vertical-align top

h1, h2, h3, h4, h5, h6
	font-size 1em
	font-weight normal

ul, li
	list-style none

a
	text-decoration none
	color $color_5
	display inline-block
	cursor pointer
	transition color .5s ease

	&:hover
		color $color_4

p
	padding 5px 0 10px	

input, textarea
	color $color_4
	font-family 'PT Sans Caption', sans-serif
	border 0
	font-size 14px
	border-radius 3px

button
	overflow visible
	background none
	font-family 'PT Sans Caption', sans-serif

body
	font-size 14px
	color $color_7
	font-family 'PT Sans Caption', sans-serif
	background-color $color_1

.page-unit
	width  100%
	max-width 1300px
	margin 0 auto
	padding 0 20px

.page-unit.table-cell
	width auto

.clearfix:after
	content ''
	clear both
	content "."
	display block
	height 0
	visibility hidden
	font-size 0
	line-height 0

.fl
	float left

.fr
	float right

.wide
	width 100%

.middle
	vertical-align middle

.flex
	display flex

.flex-item
	flex 1, 1, auto

.table-wide
	display table
	width 100%

.table-cell
	display table-cell

.iblock
	display inline-block

.text-center
	text-align center

.text-right
	text-align right

.bold
	font-weight 700

.submit-btn
	padding 5px 15px
	min-height 30px
	background-color $color_5
	color $color_1
	border-radius 3px
	cursor pointer

.internal-link
	border-bottom 1px dotted

.main-title
	letter-spacing 1px
	color $color_4
	font-size 22px
	text-transform uppercase
	text-align center
	font-weight 700
	padding 40px 0 30px
	position relative

	.inner
		display inline-block
		position relative
		z-index 1
		padding 0 120px

		&:after
			content ''
			position absolute
			top 50%
			right 0
			width 100px
			height 1px
			background-color $color_8

		&:before
			content ''
			position absolute
			top 50%
			left 0
			width 100px
			height 1px
			background-color $color_8

.block-title
	letter-spacing 1px
	color $color_4
	font-size 18px
	font-weight 700
	padding 20px 0 10px

.dropdown
	.dropdown-menu
		display none

	&.open
		.dropdown-menu
			display block


.btn-border
	display inline-block
	padding 10px 20px 12px
	border 1px solid $color_1
	text-transform uppercase
	position relative
	color $color_1
	font-size 16px

	&:hover
		border-color $color_1
		color $color_1

	&:after
		background-color $color_1
		content ''
		position absolute
		width 100%
		height 0px
		transition height .5s ease
		left 0
		bottom 0

	&:hover:after
		height 4px

.btn-main
	cursor pointer
	display inline-block
	font-size 16px
	color $color_1
	text-transform uppercase
	position relative

	.inner
		display inline-block
		z-index 2
		position relative
		padding 10px 30px 12px
		background-color $color_5
		border-radius 5px

	&:hover
		border-color $color_1
		color $color_1

	&:after
		z-index 1
		background-color $color_8
		border-radius 5px
		content ''
		position absolute
		width 100%
		height 100%
		transition all .5s ease
		left 4px
		top 4px

	&:hover:after
		top 0
		left 0

.text-field
	display inline-block
	padding 10px 10px 12px
	background-color $color_1
	border 1px solid $color_5
	border-radius 5px

.select2-container--default
	text-align left
	.select2-selection--single
		background-color $color_1
		border 1px solid $color_5
		border-radius 5px
		height auto

		.select2-selection__rendered
			padding 10px 30px 12px 10px
			line-height inherit

	.select2-results__option--highlighted[aria-selected]
		background-color $color_5

	.select2-selection--single
		.select2-selection__arrow
			top 8px
			right 8px

			b
				border-width 5px 5px 0 5px

	&.select2-container--open
		.select2-selection--single
			.select2-selection__arrow
				b
					border-width 0 5px 5px

.width-checker
	position fixed
	top 0
	width 100%
	height 0

.select2-dropdown
	border-color $color_5
	border-radius 0 0 5px 5px

.message-box
	margin 15px auto
	padding 20px
	border-width 1px
	border-style solid
	max-width 800px

	&.message-error
		background-color $color_15
		border-color $color_16

	&.message-info
		background-color $color_17
		border-color $color_18

	&.message-warning
		background-color $color_13
		border-color $color_14

	&.message-success
		background-color $color_19
		border-color $color_20

@media screen and (max-width: 968px)
	.btn-main, body
		font-size 13px

	.main-title
		padding 30px 0 20px
		font-size 18px

		.inner
			padding-left 0
			padding-right 0

			&:after, &:before
				display none

	.block-title
		font-size 16px


@media screen and (max-width: 640px)
	.main-title
		font-size 16px

	.page-unit
		padding-left 10px
		padding-right 10px

@media screen and (max-width: 480px)
	.btn-main
		.inner
			padding-left 20px
			padding-right 20px
